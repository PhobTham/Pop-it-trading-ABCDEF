local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Buy All Letter", "DarkTheme")


local Tab = Window:NewTab("All Letter Dupe")


local Section = Tab:NewSection("A B C D E F")



Section:NewButton("buy A", "cost 1 k", function()
    
local args = {
    [1] = "A"
}

game:GetService("ReplicatedStorage").RemoteEvents.BuyItemCash:FireServer(unpack(args))

end)


Section:NewButton("buy B", "cost 100", function()
    
local args = {
    [1] = "B"
}

game:GetService("ReplicatedStorage").RemoteEvents.BuyItemCash:FireServer(unpack(args))

end)


